<UserControl x:Class="FlyOnTheWall.Views.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlyOnTheWall.Views"
             mc:Ignorable="d">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem x:Name="MenuFile" Header="_File"></MenuItem>
            <MenuItem x:Name="MenuOptions" Header="_Options"></MenuItem>
            <MenuItem x:Name="MenuHelp" Header="_Help"></MenuItem>
        </Menu>
    </Grid>
</UserControl>
